                android:text="Miami"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btnMiami" />

            <Button
                android:text="Moscow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btnMoscow" />

            <Button
                android:text="Oslo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
