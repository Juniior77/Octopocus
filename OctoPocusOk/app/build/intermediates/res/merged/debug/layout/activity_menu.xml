                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btnToronto" />

            <Button
                android:text="Vienna"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btnVienna" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
